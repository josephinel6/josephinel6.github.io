---
import "../styles/global.css"
---


<html>
   <head>
      <link rel="stylesheet" 
         href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
   
<style>
    h1,
    h2,
    h3 {
        color: var(--color-gen-text);
    }
    
    #menu {
        height: 100%;
        width: 20%;
        position: absolute;
        z-index: 1;
        top: 0;
        bottom: 0;
        left: 0;
        background-color: var(--color-bg);
    }
    
    #topbar {
        width: 100%;
        height: 8%;
        background-color: var(--color-bg);
        position: absolute;
        top: 0;
        left: 0;
        display: flex;
        vertical-align:middle;
        justify-content: right;
        align-items: center;
    }
    
    .menu-text {
        color: var(--color-menu-text);
        font-family: sans-serif;
        font-size: 20px;
    }
    
    .menu-text:hover {
        cursor: pointer !important;
        color: var(--color-menu-hover);
    }
    
    .fa-github {
        color: var(--color-menu-text);
    }
    
    .fa-github:hover {
        color: var(--color-menu-hover);
        cursor: pointer;
    }
    
    .tabcontent {
        height: 100%;
        width: 78vw;
        position: relative;
        overflow-y: scroll;
        padding: 2.5%;
        /* margin-top: 2.5%;
        margin-left: 2.5%; */
    }
    
    
    #day-night {
        color: var(--color-menu-text);
        z-index: 2;
        margin-right: 1vw;
    }
    
    #day-night:hover {
        cursor: pointer;
        color: var(--color-menu-hover)
    }
    </style>
        </head>
   <body>
      <div id="menu">
         <div style="position:absolute; top: 8%; width: 100%; text-align: center;">
            <p class="menu-text" onclick="location.href='/'"> Home </p>
            <p class="menu-text" onclick="location.href='/about'"> About </p>
            <p class="menu-text" onclick="location.href='/work'"> Work </p>
            <!-- <a href="/">Home</a>
            <a href="/about/">About</a>
            <a href="/blog/">Blog</a> -->
         </div>
         <div style="position:absolute; bottom:3%; width: 100%; text-align: center;">
            <i class="fa-brands fa-github fa-lg" onclick="location.href='https://github.com/josephinel6'"/>
         </div>
      </div>
      <div id="topbar">
         <i class="fa fa-sun fa-lg" id="day-night"/>
      </div>

      <script>
        document.querySelector('#day-night').addEventListener('click', () => {
            if (localStorage.getItem("user-theme") === "dark") {
                localStorage.setItem("user-theme", "light");
            } else {
                localStorage.setItem("user-theme", "dark");
            }
            document.documentElement.className = localStorage.getItem("user-theme");

        });
      </script>
</html>