---

<html>
  <head>
    <style>
      .project-listing {
        /* height: 80vh;
        overflow-y: hidden; */
        color: var(--color-text);
        position: relative;
        /* max-height: 80vh; */
        /* height: 100%; */
        /* padding-bottom: 10vh; */
      }

      /* .nested:hover {
        cursor: pointer;
        background-color: var(--color-obj-hover);
      } */

      .nested:hover {
        cursor: pointer;
      }

      img {
        margin-top: 2vh;
        margin-bottom: 2vh;
        width: 100%;
        /* height: auto; */
        height: 26vh;
        /* background-color: red; */
        /* object-fit: cover; */
        object-fit:contain;
      }

      .nested {
        padding-left: 1em;
        padding-right: 1em;
        /* padding-left: 1.5em;
        padding-right: 1.5em; */
        padding-top: 0.5em;
        padding-bottom: 0.5em;
        border-radius: 0.5em;
        /* height: 100%; */
        /* background-color:#ffe6ea; */
        border-style: solid;
        border-color: #ffe6ea;
        height: 100%;
      }

      .project-listing-title {
        font-size: 1em;
        /* margin-bottom: 3.5em; */
        margin-bottom: 2.5em;
      }

      .tool-logo {
        height: 2.5vh;
        object-fit: contain;
        width: auto;
        margin-right: 0.3em;
      }

      @media screen and (max-width: 800px) {
        .tool-logo {
          height: 2vh;
        }
      }

      .col {
        display: flex;
        flex-direction: column;
      }

      .tool-logos {
        position: absolute;
        bottom: 0.5em;
        z-index: 5;
      }
    </style>
  </head>
  <body>
    <div class="project-listing col">
      <div class="nested" onclick={"location.href='" + url + "'"}>
        <!-- <Image src={images[img]()} alt="Thumbnail" /> -->
        <!-- <Image src={import("/src/content/projects/" + img)} alt="Thumbnail" /> -->
        <div class="top">
          <img src={img} />
          <h3 class="project-listing-title">{title}</h3>
          <!-- <p class="project-listing-desc">{desc}</p> -->
        </div>
        <div class="tool-logos">
          {
            tools &&
              tools.map((tool) => (
                <img
                  class="tool-logo"
                  onclick={"location.href='/tools/" + tool + "'"}
                  src={"/logos/" + tool.toLowerCase() + ".svg "}
                />
              ))
          }
        </div>
      </div>
    </div>
  </body>
  <script></script>
</html>
