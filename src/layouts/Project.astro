---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Image from "astro/components/Image.astro";

import "../styles/global.css";
import "../styles/project-content.css";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;

// const tags = frontmatter.tags + "";
// const formattedTags = tags.split(",").join(", ");
// console.log(formattedTags);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/public/logo.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title} | Josephine's Portfolio</title>
    <style>
      #project {
        margin-top: 5%;
        font-family: sans-serif;
        width: 50vw;
        /* margin-left: 21vw; */
        background-color: var(--color-obj-bg);
        padding: 1.5em;
        color: var(--color-text);
        margin-left: 25vw;
        /* left: 25vw; */
        /* position: absolute; */
      }

      #thumbnail {
        width: 100%;
        height: min-content;
        object-fit: contain;
      }

      #content {
        text-align: left;
      }

      #project-try-it {
        border: none;
        border-radius: 0.5em;
        padding: 0.7em;
        color: white;
        background-color: var(--color-darker-obj-bg);
        margin-bottom: 0.7vh;
      }

      #project-try-it:hover {
        cursor: pointer;
      }

      #title {
        margin-top: 3vh;
        margin-bottom: 0.1em;
      }

      @media screen and (max-width: 758px) {
        #project {
          width: 90vw;
          margin-left: 5vw;
        }

        /* #project-try-it {
          padding: 0.5em;
          margin-bottom: ;
        } */
      }

      .tag {
        border-radius: 0.8em;
        border: 1px var(--color-outline) solid;
        /* background-color: white; */
        padding: 0.25em;
        padding-left: 0.4em;
        padding-right: 0.4em;
        font-size: 0.75em;
        width: fit-content;
        display: inline-block;
        margin-right: 0.35em;
      }

      .tag:hover {
        cursor: pointer;
        background-color: wheat;
        background-color: var(--color-obj-hover);
      }

      #tags {
        margin-bottom: 1.3vh;
      }

      .tool-tag {
        margin-right: 0.25em;
      }

      .tool-tag:hover {
        cursor: pointer;
      }

      #made-with {
        font-size: 0.8em;
        margin-top: 0;
        margin-bottom: 2.5vh;
      }

      /* #wrapper {
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
      } */
    </style>
  </head>
  <body>
    <BaseLayout>
      <div id="project">
        <div id="tags">
          {
            frontmatter.tags.map((tag) => (
              <div class="tag" onclick={"location.href='/tags/" + tag + "'"}>
                {" "}
                {tag}{" "}
              </div>
            ))
          }
        </div>
        <div style="text-align:center">
          <!-- <img id="thumbnail" src={frontmatter.thumbnail} /> -->
          <!-- <Image
              id="thumbnail"
              src={import(
                "../../src/content/projects/" + frontmatter.thumbnail
              )}
              alt="Thumbnail"
            /> -->
          <!-- <img src={"../../src/content/projects/" + frontmatter.thumbnail} /> -->

          <img src={frontmatter.thumbnail} />
        </div>
        <h1 id="title">{frontmatter.title}</h1>

        <p id="made-with">
          Made with {
            frontmatter.tools.map((tool) => (
              <u
                class="tool-tag"
                onclick={"location.href='/tools/" + tool + "'"}
              >
                {" "}
                {tool}
              </u>
            ))
          }
        </p>

        <button
          id="project-try-it"
          onclick={"location.href'" + frontmatter.link + "'"}
        >
          Try It â†—</button
        >

        <div id="content">
          <slot class="slot" />
        </div>
      </div></BaseLayout
    >
    <script>
      import "../scripts/global.js";
    </script>
  </body>
</html>
