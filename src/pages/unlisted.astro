---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectListing from "../components/ProjectListing.astro";
import { getCollection } from "astro:content";
import ProjectListings from "../components/ProjectListings.astro";

const projects = await getCollection("unlisted");

projects.sort((a, b) => Date.parse(b.data.date) - Date.parse(a.data.date));
---

<html>
  <head>
    <link rel="icon" href="/logo.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
    <style>
      #tool {
        margin-right: 0.25em;
        font-size: 1.3em;
      }
    </style>
  </head>
  <body>
    <BaseLayout>
      <div id="main-content">
        <ProjectListings projects={projects} />
      </div>
    </BaseLayout>
  </body>
</html>
