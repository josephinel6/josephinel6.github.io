---

import Menu from '../components/menu.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
		<style>
			h1 {
				font-family: sans-serif;
				color: var(--color-title-text);
			}
	
			p {
				color: var(--color-title-text);
				font-family: monospace;
				/* line-height: 1em; */
				font-size: 1.2em;
				margin-bottom: 0.2vh;
				margin-top: 0;
			}
	
			.typewriter h1 {
				font-family: monospace;
				overflow: hidden;
				border-right: .15em solid var(--color-title-text);
				white-space: nowrap;
				margin: 0 auto;
				letter-spacing: .15em;
				animation:
					typing 1s steps(30, end),
					blink-caret .5s step-end infinite;
			}
	
			@keyframes typing {
				from {
					width: 0
				}
	
				to {
					width: 13%
				}
			}
	
			@keyframes blink-caret {
	
				from,
				to {
					border-color: transparent
				}
	
				50% {
					border-color: var(--color-title-text)
				}
			}
	
			#options {
				padding-left: 2vw;
				display: inline-block;
			}
	
			.intro-option:hover {
				color: var(--color-title-hover);
				cursor: pointer;
			}
	
			#intro-block-expansion {
				display: none;
				width: 25vw;
				/* background-color: orang  e; */
				height: 50vh;
				margin-top: 4vh;
			}
	
			#project-preview {
				background-color: var(--color-obj-bg);
				height: 70vh;
				width: 45vw;
				display: inline-block;
				width: 45vw;
				right: 5vw;
				top: 9vh;
				/* magin-top: -15vh; */
				position: absolute;
			}
	
			@media screen and (max-width: 1200px) {
				#intro-block-expansion {
					width: 30vw;
				}
			}
	
			@media screen and (max-width:768px) {
				#intro-block-expansion {
					width: 40vw;
				}
	
				#project-preview {
					display: block;
					position: relative;
					height: 50vh;
					width: 100%;
					margin-top: 5vh;
					right: 0;
					padding-top: 2%;
				}
	
			}
	
			#button-one:hover {
				background-color: var(--color-mid-obj-hover) !important;
				cursor: pointer;
				/* background-color: orange; */
			}
		</style>
	</head>
	<body>
		<!-- <Navigation/> -->
        <div id="homepage" class="tabcontent">
            <div id="intro-block" style="inline-block">
                <img style="float: left; display: inline-block; height: 15vh; width: 10vw; object-fit: cover; border-radius: 2em;"
                    src="../../public/profile.jpg">
                <div class="typewriter">
                    <h1 style="display: inline-block; margin-left: 2vw; margin-top: 0.6vh;"> Josephine
                    </h1>
                </div>
                <div id="options">
                    <p class="intro-option" onclick="showexpansion('robotics')"> robotics </p>
                    <p class="intro-option" onclick="showexpansion('ballet')"> ballet </p>
                    <p class="intro-option" onclick="showexpansion('academics')"> academics </p>
                </div>
                <div id="intro-block-expansion"></div>
            </div>
        </div>

	</body>
</html>
